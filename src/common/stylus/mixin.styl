/* 样式函数定义 */
// 全局背景图
bg-image($url)
  background-image:url($url+ '')
// logo图
logo-image($url)
  background-image:url($url+".png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image:url($url+".png")
// 单独背景图
bg-image-this($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
// 文字省略
no-wrap()
  text-overflow:ellipsis
  overflow:hidden
  white-space: nowrap
// 小图标点击区域
extend-click()
  position:relative
  &:before
    content:''
    position: absolute
    top:-10px
    left:-10px
    right:-10px
    bottom:-10px
